  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --colors --coverage --coverageReporters=cobertura",
    "test:watch": "jest --colors --watch",
    "lint": "eslint . --ignore-pattern '/*-legacy/*'",
    "lint:fix": "eslint . --fix --ignore-pattern '/*-legacy/*'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/one-acre-fund/ussd-sms.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/one-acre-fund/ussd-sms/issues"
  },
  "homepage": "https://github.com/one-acre-fund/ussd-sms#readme",
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "eslint": "^7.2.0",
    "jest": "^26.4.2",
    "jest-junit": "^11.1.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./setupTests.js"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/*-legacy/**",
      "!.eslintrc.js",
      "!./coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 87.65,
        "functions": 97.17,
        "lines": 93.17,
        "statements": 93.2
      }
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "verbose": true
  },
  "jest-junit": {
    "outputName": "TEST-RESULTS.xml"
  },
  "dependencies": {
    "moment": "^2.27.0",
    "underscore": "^1.6.0"
  }
